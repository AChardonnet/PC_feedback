{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="row">
            <div class="col-md-10">
                <div class="header"><h2>{{ course.name }}</h2></div>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success" onclick="location.href = '{{ path('course_feedback', {'id' : course.id}) }}';">Commenter</button>
            </div>
        </div>
        <div class="header">
            {% if feedbacks != [] %}
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Moyennes</th>
                        <th scope="col">Note Générale<br>{{ scores[0][1]|number_format(1,',') }}/5</th>
                        <th scope="col">Note de Difficulté<br>{{ scores[0][2]|number_format(1,',') }}/5</th>
                        <th scope="col">Note d'Intéret<br>{{ scores[0][3]|number_format(1,',') }}/5</th>
                    </tr>
                    </thead>
                    <tr>
                        <th scope="col">Feedbacks</th>
                        <th scope="col">Note Générale</th>
                        <th scope="col">Difficulté</th>
                        <th scope="col">Intérêt</th>
                    </tr>
                    <tbody>
                    {% for feedback in feedbacks %}
                        <tr>
                            <td>{{ feedback.comment }}</td>
                            <td>{{ feedback.overall }}</td>
                            <td>{{ feedback.difficulty }}</td>
                            <td>{{ feedback.interest }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                </table>
                <h4>Ce cours n'as pas de feedback.</h4>
            {% endif %}
        </div>
    </div>
{% endblock %}
