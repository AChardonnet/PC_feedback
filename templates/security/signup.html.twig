{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="card">
        <div class="header"><h2>Inscription</h2></div>
        <div class="body">

            {{ form_start(form) }}
            {{ form_row(form.username, {'label' : 'Nom d\'utillisateur', 'attr' : {'placeholder' : 'Nom d\'utilisateur', 'class' : 'form-control'}}) }}
            {{ form_row(form.email, {'label' : 'E-mail', 'attr' : {'placeholder' : 'E-mail', 'class' : 'form-control'}}) }}
            {{ form_row(form.firstName, {'label' : 'Prénom', 'attr' : {'placeholder' : 'Prénom', 'class' : 'form-control'}}) }}
            {{ form_row(form.lastName, {'label' : 'Nom', 'attr' : {'placeholder' : 'Nom', 'class' : 'form-control'}}) }}
            {{ form_row(form.promo, {'label' : 'Promo', 'attr' : {'placeholder' : 'Promo', 'class' : 'form-control'}}) }}
            {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe', 'class' : 'form-control'}}) }}
            {{ form_row(form.confirm_password, {'label' : 'Confirmation de mot de passe', 'attr' : {'placeholder' : 'Confirmation de mot de passe', 'class' : 'form-control'}}) }}
            <button type="submit" class="btn btn-success">Inscription</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}